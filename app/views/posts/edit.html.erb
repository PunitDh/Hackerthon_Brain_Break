<%= form_with(model: @post, url: edit_path, method: "patch") do |form| %>
<table class="table">
  <tr><td>
  <%= form.label :title, "Name", class: "form-label" %></td>
  <td>
  <%= form.text_field :title, class: "form-control" %></td>
  </tr>
  
  <tr><td>
  <%= form.label :body, "Chocolates", class: "form-label" %></td>
  <td>
  <%= form.number_field :body, in: 1..100, step: 1, class: "form-control" %></td></tr>

  <tr><td>
  <button id="chocolateaddbutton" class="btn btn-success">Add 1 chocolate ğŸ˜ƒ</button>
  <button id="chocolateremovebutton" class="btn btn-danger">Remove 1 chocolate ğŸ˜­</button>
  </td>
  
  <td>
  <%= form.submit class: "btn btn-primary" %></td><td>
  <%= link_to 'Show', show_path(@post), class: "btn btn-warning" %>
  <%= link_to 'Back', root_path, class: "btn btn-danger" %></td></tr>
  </table>
<% end %>



<script>
  document.getElementById("chocolateaddbutton").addEventListener("click",(event) => {
    document.getElementById("post_body").value++;
    event.preventDefault();
    });

  document.getElementById("chocolateremovebutton").addEventListener("click",(event) => {
    document.getElementById("post_body").value--;
    event.preventDefault();
    });
</script>